@model Shangpin.Logistic.Util.Pager.PagedList<Shangpin.Logistic.Model.TestModel>
<div class="toolbar">
    <ul>
        <li class="toolbtn">@Ajax.ActionLink("刷新", "TestList", null, (AjaxOptions)ViewBag.AjaxOptions, new { @class = "refresh", id = "btnTestRefresh" })</li>
        @*<li class="toolbtn"><a class="on" href="javascript:RepairBatchDetail();">补充批次信息</a></li>*@
    </ul>
</div>
@{
    Html.RenderPartial("_PartialDataTableFootPager", Model);
}
<div class="tablelist">
    <table cellpadding="0" cellspacing="0" border="0" class="DataTable SingleSelect" id="DataTables1">
        <thead>
            <tr>
                <th class="CbxColumn">
                    <input type="checkbox" class="CheckAll" />
                </th>
                <th>规则编号</th>
                <th>规则名称</th>
                <th>规则描述</th>
                <th>规则状态</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Count == 0)
                {
                    Html.RenderPartial("_PartialDataTableEmptyRow", Model);
                }
                else
                {
                    for (int i = 0; i < Model.Count; i++)
                    {
                        var m = Model[i];
                        <tr class="@(i % 2 == 0 ? "odd" : "even")">
                            <td class="CbxColumn">
                                <input type="checkbox" value="@m.RoleNo" />
                            </td>
                            <td>@m.RoleNo</td>
                            <td>@m.RoleName</td>
                            <td>@m.RoleDescription</td>
                            <td>@m.Status</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
@{
    Html.RenderPartial("_PartialDataTableFootPager", Model);
}